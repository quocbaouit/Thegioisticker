@{
    ViewBag.Title = "Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeadMeta
{
    <title>@ViewBag.MetaTitle</title>
    <meta name="description" content="@ViewBag.MetaDescription">
}

<style>
    .bootstrap-select:not([class*="col-"]):not([class*="form-control"]):not(.input-group-btn) {
        width: 280px;
    }
    .billing-country {
        padding-bottom: 5px;
    }
    .dropdown-menu {
        position: unset !important;
    }
    .detail-slider img {
        margin: 0 auto;
        width: 100%;
        min-height: 120px;
    }
    .modal-body {
        min-height: 400px;
    }
    .nav-tabs > li.active > a, .nav-tabs > li.active > a:focus, .nav-tabs > li.active > a:hover {
        /*       border: groove;*/
        border-color: cornflowerblue;
    }
    .nav-tabs > li {
        min-width: 80px;
        max-width: 130px;
    }
    .nav > li > a {
         padding: unset;
    }
    .nav-tabs > li > a {
         margin-right: unset; 
    }
    textarea {
        width: 100%;
    }

    .textwrapper {
        border: 1px solid #999999;
        margin: 5px 0;
        padding: 3px;
    }
</style>
<!-- content -->
<section ng-app="thegioistickerApp" ng-controller="productDetailController" class="organic-content">
    <section class="organic-content">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="sidebar">
                        <div class="product-list clearfix">
                            <h3 class="sidebar-title">Danh Mục In</h3>
                            <p ng-if="!printingCategory ||printingCategory.length==0">Không có sản phẩm nào vừa xem.</p>
                            <div ng-repeat="product in printingCategory" class="product">
                                <div class="media-left product-img">
                                    <a ng-click="viewDetail(product.seoUrl)" href="javascript:void(0)"><img ng-src="{{product.image}}" alt="{{product.name}}"></a>
                                </div>
                                <div class="product-price media-right">
                                    <h3><a ng-click="viewDetail(product.seoUrl)" href="javascript:void(0)" class="color-setting">{{product.name}}</a></h3>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="shopgird-detai-img">
                            <div class="detail-slider">
                            </div>
                        </div>
                        <form id='f1'>
                            <div class="shopgird-detai-content">
                                <div id='f1-step1' class="mid-product-content media-body">
                                    <div class="form-tax">
                                        <h4>{{product.name}}</h4>
                                        <div class="billing-address">
                                            <div class="form-group billing-country">
                                                <div class="billing-category">
                                                    <label>Kính thước *</label>
                                                </div>
                                                <div class="billing-select">
                                                    <input maxlength="4" ng-model="shoppingCart.width" number-input style="width:43%;float:left;margin-right:25px" placeholder="ngang(mm)" name="width" type="text">
                                                    <input maxlength="4" ng-model="shoppingCart.height" number-input style="width:43%;float:left;" placeholder="cao(mm)" name="height" type="text">
                                                </div>
                                            </div>
                                            <div class="form-group billing-country">
                                                <div class="billing-category">
                                                    <label>Số lượng cần in *</label>
                                                </div>
                                                <div class="billing-select">
                                                    <input maxlength="7" interger-input ng-model="shoppingCart.quantity" num-only name="quantity" type="text">
                                                </div>
                                            </div>
                                            <div class="form-group billing-country">
                                                <div class="billing-category">
                                                    <label>Loại decal</label>
                                                </div>
                                                <div class="billing-select">
                                                    <select ng-disabled="true" ng-model="shoppingCart.material"
                                                            ng-options="opt as opt.name for opt in printingCategory track by opt.code">
                                                    </select>
                                                    <p ng-if="invoicePrintPrice>0">{{invoicePrintPrice|number}} (VND)</p>
                                                </div>
                                            </div>
                                            <div class="form-group billing-country">
                                                <div class="billing-category">
                                                    <label>Cán màng</label>
                                                </div>
                                                <div class="billing-select">
                                                    <select ng-model="shoppingCart.machining"
                                                            ng-options="opt as opt.label for opt in machinings">
                                                    </select>
                                                    <p ng-if="invoiceMachining>0">{{invoiceMachining|number}} (VND)</p>
                                                </div>
                                            </div>
                                            <div class="form-group billing-country">
                                                <div class="billing-category">
                                                    <label>Bế</label>
                                                </div>
                                                <div class="billing-select">
                                                    <select ng-model="shoppingCart.cut"
                                                            ng-options="opt as opt.label for opt in cuts">
                                                    </select>
                                                    <p ng-if="invoiceCut>0">{{invoiceCut|number}} (VND)</p>
                                                </div>
                                            </div>

                                            <div class="form-group billing-country">
                                                <div class="billing-category">
                                                    <label>Thành Tiền</label>
                                                </div>
                                                <div class="billing-select">
                                                    <p>{{subTotal |number}}(VND)</p>
                                                </div>
                                            </div>
                                        <div class="form-group">
                                            <label class="radio-inline">
                                                <input ng-model="fileType.name" value="design" type="radio" name="fileradio">Thiết Kế Theo Yêu Cầu
                                            </label>
                                            <label class="radio-inline">
                                                <input ng-model="fileType.name" value="sample" type="radio" name="fileradio">Chọn Mẫu
                                            </label>
                                            <label class="radio-inline">
                                                <input ng-model="fileType.name" value="upload" type="radio" name="fileradio">Upload File
                                            </label>
                                        </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="add-card">
                                        <button data-ng-click="shopNow()" class="button  bd-radius-50 btn-setting bd-color-setting ">Đặt In Ngay</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="detail">
                        <ul class="nav nav-pills nav-justified">
                            <li class="active"><a data-toggle="pill" href="#descrition" class="btn-setting">Mô Tả Sản Phẩm</a></li>
                        </ul>

                        <div class="tab-content detail-tab">
                            <div class="tab-pane fade in active">
                                @Html.Raw(ViewBag.description)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
<!--content -->
